# Smartsheet API Configuration
SMARTSHEET_API_TOKEN=your_api_token_here
WORKSPACE_ID=your_workspace_id_here

# Optional Configuration
LOG_LEVEL=INFO
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# SSL Configuration (for enterprise environments)
# Set to false to disable SSL verification (not recommended for production)
SSL_VERIFY=true

# Path to custom CA bundle file for enterprise environments
# Example: /path/to/corporate-ca-bundle.pem
SSL_CA_BUNDLE=

# Alternative: path to specific SSL certificate
SSL_CERT_PATH=

# Proxy Configuration (for corporate networks)
# HTTP proxy URL (e.g., http://proxy.company.com:8080)
PROXY_HTTP=

# HTTPS proxy URL (e.g., https://proxy.company.com:8080)
PROXY_HTTPS=